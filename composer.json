{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist",
    "generate-salts": true
  },
  "autoload": {
    "psr-0": {"Roots\\Bedrock\\Installer": "scripts"}
  },
  "scripts": {
    "post-root-package-install": ["Roots\\Bedrock\\Installer::addSalts"]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.3",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "~1.0.9",
    "johnpbloch/wordpress": "4.2.2",
    "fancyguy/webroot-installer": "1.1.0",
    "wp-cli/wp-cli": "v0.13.0",
    "wpackagist-plugin/wpfront-user-role-editor": "2.*",
    "wpackagist-plugin/contact-form-7": "4.2.*",
    "wpackagist-plugin/admin-column-view": "1.0.*",
    "wpackagist-plugin/admin-renamer-extended": "3.*",
    "wpackagist-plugin/email-encoder-bundle": "1.4.*",
    "wpackagist-plugin/wordpress-seo": "2.2.*",
    "wpackagist-plugin/wordpress-importer": "0.6.*",
    "wpackagist-plugin/regenerate-thumbnails": "2.2.*",
    "wpackagist-plugin/nk-google-analytics": "1.4.*",
    "wpackagist-plugin/wp-mail-smtp": "0.9.*",
    "wpackagist-plugin/better-wp-security": "3.5.*",
    "wpackagist-plugin/all-in-one-wp-security-and-firewall": "2.6.*",
    "wpackagist-plugin/wp-super-cache": "1.4.4",
    "wpackagist-plugin/disable-emojis": "1.5",
    "roots/soil": "3.4.0"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
